# Groq API Key (get from https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# API Security - Generate a strong random key
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=your_secret_api_key_here

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Model Settings
LLM_MODEL=llama-3.1-8b-instant
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/chat_history.db

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma_db

# RAG Settings
RAG_TOP_K=10
RAG_RERANK_TOP_K=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50
